<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
  <application
      android:label="M50"
      android:name="${applicationName}"
      android:icon="@mipmap/launcher_icon">

    <!-- Tu App ID de AdMob -->
    <meta-data
        android:name="com.google.android.gms.ads.APPLICATION_ID"
        android:value="ca-app-pub-3102508405391403~2483642199"/>

    <!-- >> ESTA ES LA ENTRADA CORRECTA PARA EL AdActivity << -->
    <activity
        android:name="com.google.android.gms.ads.AdActivity"
        android:exported="false"
        android:theme="@android:style/Theme.Translucent"
        android:configChanges="
            keyboard|keyboardHidden|
            orientation|screenLayout|
            uiMode|screenSize|
            smallestScreenSize"
        tools:replace="android:configChanges"/>

    <!-- Tu MainActivity original, déjala tal cual estaba antes -->
    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:launchMode="singleTop"
        android:taskAffinity=""
        android:theme="@style/LaunchTheme"
        android:configChanges="
            orientation|keyboardHidden|keyboard|
            screenSize|smallestScreenSize|
            locale|layoutDirection|fontScale|
            screenLayout|density|uiMode"
        android:hardwareAccelerated="true"
        android:windowSoftInputMode="adjustResize">

      <meta-data
          android:name="io.flutter.embedding.android.NormalTheme"
          android:resource="@style/NormalTheme"/>

      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Flutter embedding, no lo toques -->
    <meta-data
        android:name="flutterEmbedding"
        android:value="2"/>
  </application>

  <!-- tus <queries> aquí… -->
</manifest>